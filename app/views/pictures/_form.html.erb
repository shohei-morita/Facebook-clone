<%= form_with(model: @picture, url: choose_new_or_edit, local: true) do |form| %>
  <% if @picture.errors.any? %>
    <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control", rows:8 %>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= image_tag(@picture.image.url(:gallery)) if @picture.image && @picture.image.url %>
    <%= form.file_field :image , class: "btn btn-default"%>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="form-group">
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %>
